#!/bin/sh

scanPath="."
if [[ $1 != "" ]]; then
    scanPath=$1;
fi;

echo "<?php";
echo "return array(";
echo `find -L $scanPath -name "*php"  | xargs grep "^class " | sed -e "s@\([^:]*\):class \([^ ]*\).*@    '\2' => '\1',\
@"`;
echo `find -L $scanPath -name "*php"  | xargs grep "^abstract class " | sed -e "s@\([^:]*\):abstract class \([^ ]*\).*@    '\2' => '\1',\
@"`;
echo `find -L $scanPath -name "*php"  | xargs grep "^interface " | sed -e "s@\([^:]*\):interface \([^ ]*\).*@    '\2' => '\1',\
@"`;
echo ");";
echo "?>";
